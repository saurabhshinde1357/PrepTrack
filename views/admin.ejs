  <style>
    /* Futuristic Base */
    body {
      background: radial-gradient(circle, #0e0e2f, #1a1a52);
      color: #b5e6ff;
     font-family: 'Sarpanch', sans-serif;







    }

    /* Sidebar */
    .sidebar {
      width: 280px;
      height: 100vh;
      background: linear-gradient(145deg, #0b0b28, #3a3a5c);
      position: fixed;
      padding: 20px;
      color: #00f5ff;
      border-right: 2px solid #00f5ff;
    }
    .sidebar h2 {
      text-align: center;
      font-size: 2rem;
    }
    .sidebar a {
      color: #b5e6ff;
      font-size: 1.2rem;
      padding: 10px;
      border-radius: 8px;
      display: block;
      transition: background 0.3s;
    }
    .sidebar a:hover {
      background: rgba(0, 245, 255, 0.1);
    }

    /* Main Content */
    .main-content {
      margin-left: 280px;
      padding: 20px;
    }
    
    /* Card Style */
    .futuristic-card {
      background: rgba(40, 50, 75, 0.9);
      border: 1px solid #00f5ff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0px 8px 20px rgba(0, 245, 255, 0.3);
      color: #b5e6ff;
      transition: transform 0.3s ease;
    }
    .futuristic-card:hover {
      transform: scale(1.02);
    }

    /* Chart Area */
    .chart-container {
      position: relative;
      height: 400px;
      margin-top: 30px;
    }

    /* AI Chatbot Area */
    .ai-chatbot {
      margin-top: 40px;
      padding: 20px;
      background: rgba(15, 15, 30, 0.9);
      border: 1px solid #ff00e6;
      border-radius: 10px;
      box-shadow: 0px 5px 15px rgba(255, 0, 230, 0.4);
      text-align: center;
    }
    .ai-chatbot h3 {
      color: #ff00e6;
    }

    /* Search Bar */
    .search-bar {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }
    .search-bar input {
      border-radius: 20px;
      border: 1px solid #00f5ff;
      padding: 10px;
      width: 70%;
      background: rgba(255, 255, 255, 0.1);
      color: #b5e6ff;
    }
    .search-bar button {
      border-radius: 20px;
      margin-left: 10px;
      background: #00f5ff;
      color: #000;
    }

    /* Upload Section */
    .upload-section {
      margin-top: 40px;
    }
    .upload-section h2 {
      text-align: center;
    }
    .upload-card {
      padding: 20px;
      background: rgba(15, 15, 30, 0.9);
      border: 1px solid #ff00e6;
      border-radius: 12px;
      margin-top: 20px;
    }
    .upload-card input[type="file"] {
      margin: 10px 0;
    }
  </style>
